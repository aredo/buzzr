html
body
.app-view
  font-family Helvetica, sans-serif
  width 100%
  height 100%
  overflow hidden

a
  text-decoration none
  color inherit

.table
  display table
.table-cell-vertical-middle
  display table-cell
  vertical-align middle

.bold
  font-weight bold
.italic
  font-style italic
.sans-serif
  font-family Helvetica, sans-serif
.serif
  font-family Garamond, serif
.underline
  border-bottom 2px solid Black

.center
  text-align center
.left
  text-align left
.right
  text-align right
.justify
  text-align justify

.inline-block
  display inline-block