html
body
.app-view
  font-family Helvetica, sans-serif
  font-weight 400
  width 100%
  height 100%
  overflow hidden
  line-height 1.5

a
  text-decoration none
  color inherit

.clickable
  cursor pointer

.table
  display table
.table-cell-vertical-middle
  display table-cell
  vertical-align middle

.bold
  font-weight bold
.italic
  font-style italic
.sans-serif
  font-family Helvetica, sans-serif
.serif
  font-family Garamond, serif
.underline
  border-bottom 2px solid Black
.small
  font-size 0.8em

.center
  text-align center
.left
  text-align left
.right
  text-align right
.justify
  text-align justify

.inline-block
  display inline-block

.margin
  margin 1em
.margin-top
  margin-top 1em
.margin-right
  margin-right 1em