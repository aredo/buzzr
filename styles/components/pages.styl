.home-box
  background: #56a5e2; /* Old browsers */
  background: -moz-linear-gradient(top, #56a5e2 15%, #7db9e8 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(15%,#56a5e2), color-stop(100%,#7db9e8)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, #56a5e2 15%,#7db9e8 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, #56a5e2 15%,#7db9e8 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, #56a5e2 15%,#7db9e8 100%); /* IE10+ */
  background: linear-gradient(to bottom, #56a5e2 15%,#7db9e8 100%); /* W3C */
  width 320px
  height 480px
  margin: 0 auto
  text-align center
  position relative
  
  .appstore-logo
    position relative
    top -3px
    margin-right 5px
  .signup-btn
    background Black
    color White
    padding 15px 66px
    margin 15px
    font-size 18px
    border-radius 4px
    display inline-block
  p
    margin-top 65px

.home-heading-logo
  width 260px
  padding 55px 0 0 0
  margin 50px auto 5px auto
  height: 0
  background: url('/img/logo.png') no-repeat
  overflow hidden

.home-heading-subtitle
  font-family Garamond, serif
  font-size 16px

.pages-footer
  position absolute
  bottom 0
  left 0
  width 100%
  text-align center
  font-size 11px
  font-weight bold
  color Gray
  margin-bottom 15px