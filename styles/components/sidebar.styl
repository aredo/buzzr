.move
  .blackout
    height 0
    width 100%
    background rgba(0,0,0,0.3)
    position absolute
    z-index 20
    top 0
    left 0
  &.over
    .blackout
      height 100%

.sidebar
  z-index 1000
  display block
  position fixed
  top 0
  left 0
  width 290px
  height 100%
  transition all 0.2s ease 0s
  transform translateX(-290px)
  &.open
    transform translateX(0)

.sidebar-content-center
.sidebar-content-right
  float left
  height 100%
  background White

.sidebar-loggedout-menu
.sidebar-loggedin-menu
  width 260px
  margin 0 auto
  h4
    margin 1em 0
  ul
    display block
    list-style none

.sidebar-loggedout-menu
  .button-black
  .button-white
    width 41px
  .button-twitter
    width 160px

.sidebar-content-center
  width 289px
  border-right 1px Gray solid
  overflow auto
.sidebar-content-right
  width 30px
  background transparent

.sidebar-logo
  cursor pointer
  width 30px
  height 30px
  margin 1em 0 0 1em

.sidebar-button
  display block
  width 235px
  overflow hidden
  margin 3px auto
  padding 0.5em 10px
  position relative
  text-align left

.sidebar-action-remove
  position absolute
  top 7px
  right 0
  display inline-block
  margin 0 10px 5px 0
  font-weight 300
  font-size 40px
  text-align center
  line-height 0.42
  cursor pointer
  color White
  width 24px
  height 24px
  border-radius 50%
  vertical-align bottom
  background rgba(0,0,0,0.3)

.sidebar-action-add
.sidebar-action-readlater
  display inline-block
  margin 5px 15px
  font-weight 400
  font-size 32px
  text-align center
  line-height 1
  cursor pointer
  width 34px
  height 34px
  padding 4px
  background Black
  color White
  border-radius 50%
.sidebar-action-readlater img
  width 22px
