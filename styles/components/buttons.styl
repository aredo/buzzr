.button-white
.button-black
  border-radius 4px
  padding 0.5em 2em
  display inline-block
  border 2px Black solid
  min-width 40px
  text-align center
  cursor pointer
  opacity 1
  transition opacity 0.5s ease 0s
  &:disabled
    opacity 0.3

.button-white
  background White
  color Black

.button-black
  background Black
  color White
