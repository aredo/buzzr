.form
  width 300px
  margin 0 auto

  label
    display block
    font-weight 600
    text-align left
  input, select, textarea
    display block
    width 285px
    height 2em
    appearance none
    border-radius 0
    border 1px solid #CCC
    box-shadow none
    padding-left 10px
    background transparent

.form-group
  margin-top 1em

.required
  font-size 0.8em
  font-style italic
