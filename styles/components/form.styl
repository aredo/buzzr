.form
  width 300px
  margin 0 auto
.form-group
  margin-top 1em
  label
    display block
    font-weight 600
    text-align left
  input, select, textarea
    display block
    width 100%
    height 2em
    appearance none
    border-radius 3px
    border 1px solid #CCC
    box-shadow none
    padding-left 10px
    transition all 0.2s ease 0s
