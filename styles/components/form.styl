.form
  width 300px
  margin 0 auto

  label
    display block
    font-weight 600
    text-align left
  input, textarea, select
    display block
    width 290px
    height 40px
    appearance none
    border-radius 5px
    border 1px solid Gray
    box-shadow none
    text-indent 10px
    background White
    padding 0
    margin 0
    &:focus
      outline none
  textarea
    text-indent 0
  select
    width 293px

.form-group
  margin-top 1em

.required
  font-size 0.8em
  font-style italic
