.header
  z-index 1000
  display block
  position fixed
  top 0
  left 0
  width 320px
  height 100%
  transition all 0.5s ease 0s
  transform translateX(-290px)
  &.open
    transform translateX(0)

.header-content-center
.header-content-right
  float left
  height 100%
  padding-top 1em
  background White

.header-content-center
  width 279px
  border-right 1px Black solid
  padding: 1em 5px
  position relative
.header-content-right
  width 30px
  background transparent

.header-logo
  cursor pointer
  width 30px
  height 30px
  margin 0 0 0 1em

.header-button
  display block
  width 200px
  overflow hidden
  margin 0 auto

.header-readlater
  margin 0 0 10px 10px
  display inline-block

.header-loggedin-menu
  h4
    margin 1em 10px