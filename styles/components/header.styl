.header
  @extend .composite-layer
  z-index 1000
  display block
  position fixed
  top 0
  left -290px
  width 320px
  height 100%
  transition all 0.5s ease 0s
  &.open
    left 0

.header-content-left
.header-content-center
.header-content-right
  float left
  height 100%
  padding-top 1em
  background White

.header-content-left
  width 20px
.header-content-center
  width 259px
  border-right 1px Black solid
  padding: 1em 5px
  position relative
.header-content-right
  width 30px
  background transparent

.header-logo
  cursor pointer
  width 30px
  height 30px
  margin 0 0 0 1em
