.header
  display block
  position absolute
  left -290px
  top 0
  width 320px
  height 100%
  transition left 0.5s
  z-index 1000
  &.open
    left 0

.header-content-left
.header-content-center
.header-content-right
  float left
  height 100%
  padding-top 1em
  background White

.header-content-left
  width 20px
.header-content-center
  width 269px
  border-right 1px Black solid
  position relative
.header-content-right
  width 30px
  background transparent
  img
    margin-left 1em
