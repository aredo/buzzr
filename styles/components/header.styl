.header
  z-index 1000
  display block
  position fixed
  top 0
  left 0
  width 320px
  height 100%
  transition all 0.5s ease 0s
  transform translateX(-290px)
  &.open
    transform translateX(0)

.header-content-center
.header-content-right
  float left
  height 100%
  padding-top 1em
  background White

.header-loggedout-menu
.header-loggedin-menu
  width 260px
  height 100%
  overflow auto
  margin 0 auto
  h4
    margin 1em 0
  ul
    display block
    list-style none


.header-content-center
  width 289px
  border-right 1px Black solid
.header-content-right
  width 30px
  background transparent

.header-logo
  cursor pointer
  width 30px
  height 30px
  margin 0 0 0 1em

.header-button
  display block
  width 200px
  overflow hidden
  margin 3px auto

.header-readlater
  margin 0 0 10px 0
  display inline-block
