.header
  display block
  position fixed
  left 0
  top 0
  width 320px
  height 100%
  z-index 1000
  transition all 0.5s ease 0s
  transform translateX(-290px)
  &.open
    transform translateX(0)

.header-content-left
.header-content-center
.header-content-right
  float left
  height 100%
  padding-top 1em
  background White

.header-content-left
  width 20px
.header-content-center
  width 259px
  border-right 1px Black solid
  padding: 1em 5px
  position relative
.header-content-right
  width 30px
  background transparent
  img
    margin-left 1em
