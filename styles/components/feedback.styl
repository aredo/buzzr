.feedback-popop
.feedback-button
  @extend .composite-layer
  position fixed

.feedback-button
  z-index 1000
  bottom 1em
  right 1em
  font-weight 600
  font-size 20px
  cursor pointer
  width 24px
  height 24px
  border 2px solid black
  border-radius 50%
  span
    display inline-block
    position relative
    left 8px
    bottom 4px

.feedback-popop
  display none
  z-index 1001
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0,0,0,0.5)
  &.show
    display block

.feedback-form
  position absolute
  left 50%
  top 0
  margin-left -160px
  background White
  text-align center
  width 320px
  height 480px
  .form
    textarea
      resize none
      width 285px
      height 120px
  .notifier
    min-height 2em

.feedback-close
  position absolute
  top -10px
  right 6px
  cursor pointer
  font-weight 600
  font-size 30px
