.home-pitch
  max-width 600px
  margin 1em auto 2em auto
  line-height 1.4
  font-size 24px
  font-weight 100

.home-pitch-shot
  display block
  margin 0 auto
  cursor pointer
  width 100%
  max-width 800px
  border-radius 6px
  box-shadow -3px 3px 11px 0px rgba(50, 50, 50, 0.75)

.home-indent
  font-size 0.8em
  margin-left 35px

.home-feature
  display inline-block
  margin 1.5em
  text-align left
  width 215px
  &.padding-left
    padding-left 20px

.blackout-video
  position fixed
  top 0
  left 0
  z-index 2001
  width 100%
  height 100%
  background rgba(0,0,0,0.5)
  iframe
    margin-top 3em
    width 100%
    max-width 560px
    min-height 344px

.home-heading
  text-align center
  margin-top 4em
  font-size 2em
  @media phone
    font-size 1.3em
    line-height 1.5
    margin-top 1em
  @media typeheight
    margin-top 0

.home-form.form
  position relative
  text-align center
  width 100%
  margin 0 auto
  max-width 400px
  padding-bottom 4em
  input.home-input
    display inline-block
    font-size 18px
    border-radius 4px
    border 1px Gray solid
    width 342px
    height 2em
    padding-left 30px
    @media phone
      width 260px

.home-search-icon
  position absolute
  top 10px
  left 20px
  width 20px
  height 20px
  @media phone
    left 30px
  @media iphone
    left 10px
