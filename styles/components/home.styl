.home-heading
  text-align center
  margin-top 4em
  font-size 2em
  @media phone
    font-size 1.3em
    line-height 1.5
    margin-top 1em
  @media typeheight
    margin-top 0

.home-form.form
  position relative
  text-align center
  width 100%
  margin 0 auto
  max-width 400px
  padding-bottom 4em
  input.home-input
    display inline-block
    font-size 18px
    border-radius 4px
    border 1px Gray solid
    width 342px
    height 2em
    padding-left 30px
    @media phone
      width 260px

.home-search-icon
  position absolute
  top 10px
  left 20px
  width 20px
  height 20px
  @media phone
    left 30px
  @media iphone
    left 10px