.header-search-box
  @extend .composite-layer
  position fixed
  top 0
  left 0
  width 100%
  height 40px
  background BgDark
  border-bottom 1px solid Gray
  z-index 10

.header-form.form
  position relative
  top 4px
  margin 0 auto
  width 100%
  max-width 800px
  @media (max-width: 999px)
    max-width 300px
  
  .header-search
    display inline-block
    height 25px
    width 100%
    margin 0
    max-width 400px
    font-size 16px
    font-weight 100
    font-family 'Open Sans', Helvetica, Arial, sans-serif
    text-transform uppercase
    text-indent 5px
    font-size 100
    padding 0
    border-radius 0
    border-top-left-radius 5px
    border-bottom-left-radius 5px
    @media (max-width: 999px)
      max-width 160px

.header-readlater
  position relative
  top 4px
  float right
  color Red
  span
    position relative
    top -7px

.header-search-icon
  display inline-block
  border none
  position relative
  cursor pointer
  top 2px
  left -3px
  height 27px
  width 40px
  background Green
  border-top-right-radius 5px
  border-bottom-right-radius 5px
  svg
    width 15px
    height 15px