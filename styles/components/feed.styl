.feed-container
  margin 60px auto 0 auto
  width 95%

.feed-topic
  @extend .composite-layer
  z-index 2
  position fixed
  top 0
  left 50px
  text-transform uppercase
  font-size 20px
  font-weight 600
  padding 10px 10px
  background White

.feed-item
  width 22%
  margin 20px 1.5%
  min-height 40px
  padding 10px 0 3px 0
  border-top 2px solid Black
  border-bottom 2px solid Black

.feed-link
  font-weight 600
  font-size 16px
  line-height 1.2

.feed-item-info
  margin-top 50px

.feed-item-actions
  float left

.action-readlater
.action-share
.action-remove
  display inline-block
  font-weight 300
  text-align center
  margin 0 10px 5px 0
  font-weight 600
  font-size 22px
  text-align center
  line-height 1
  cursor pointer
  color White
  width 24px
  height 24px
  border-radius 50%
  vertical-align bottom
  background rgba(0,0,0,0.7)

.action-share img
  width 12px
  margin 0 2px 1px 0

.feed-item-date
  float right
  font-weight 300
  font-size 12px
  position relative
  bottom -5px
