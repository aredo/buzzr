.feed-container
  margin 60px auto 0 auto
  width 95%

.feed-topic
  @extend .composite-layer
  position fixed
  top 10px
  left 60px
  text-transform uppercase
  font-size 20px
  font-weight 600

.feed-item
  width 22.4%
  margin 20px 1.3%
  min-height 40px
  padding 10px 0 3px 0
  border-top 2px solid Black
  border-bottom 2px solid Black

.feed-link
  font-weight 600
  font-size 22px
  line-height 1.2

.feed-item-info
  margin-top 50px

.feed-item-actions
  float left
  list-style none

.action-readlater
.action-share
.action-remove
  display inline-block
  font-weight 300
  margin 0 10px 5px 0
  font-size 16px
  text-align center
  line-height 1
  cursor pointer
  width 18px
  height 18px
  padding 3px
  background rgba(0,0,0,1)
  color White
  border-radius 50%
  vertical-align bottom

.action-readlater
  font-size 24px
  span
    position relative
    top -4px
    left -2px

.action-share
  img
    width 14px
    position relative
    top 1px
    left -1px

.action-remove
  font-size 28px
  span
    position relative
    top -6px

.feed-item-date
  float right
  font-weight 300
  font-size 12px
  position relative
  bottom -5px