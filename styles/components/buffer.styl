.buffer-top-section
  width 100%
  height 100%
  text-align center
  background White
  background url(/img/paradise.jpg) no-repeat top center
  background-size cover
  overflow hidden
  position relative
  .buffer-top-section-bottom
    position absolute
    bottom 20px
    left 0
    width 100%
    text-align center
    font-size 3em
    font-weight bold
    @media (max-height:400px)
      display none

.buffer-btn
  position relative
  width 200px
  .tweet4me-heart
    position absolute
    right 20px
    top 8px