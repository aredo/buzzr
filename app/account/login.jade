.pages-container
  include ../common/buzzr-logo

  form.form.center(name="signinForm")
    .margin-top
      a.underline(href="/join") New user? Sign up here.
    
    .form-group
      label Email*
      input(name="email", type="email", placeholder="Email", ng-model="email", required)
    
    .form-group
      label Password*
      input(name="password", type="password", placeholder="Password", ng-model="password", required)
    
    .form-group.notifier
      .error {{notifier.error}}
      .notice {{notifier.notice}}

    .form-group
      button.button-black(ng-click="signin()", ng-disabled="signinForm.$invalid") Sign in
      br
      span.required * required

include ../pages/footer
