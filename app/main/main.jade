//- searching
.center(ng-show="status.searching")
  h2.margin-top-big
    | buzzing the interweb for 
    strong {{searchText}} 
    | ...


//- unknown error
.center(ng-show="status.error")
  h2.margin-top-big
    strong Unexpected error:
    br
    | {{errorMessage}}
    br
    br
    a.underline(ng-click="toggleFeedback()") Contact us for help.


//- creating a new feed
.center(ng-show="status.creating")
  h2.margin-top
    | Your topic 
    strong {{searchText}} 
    | is a new one for Buzzr!
  p.margin-top
    | Your new Buzzr will be ready in 
    strong {{countDown}}

//- loading
.center(ng-show="showLoading()")
  h2.margin-top.center
    .loading
      //-include ../../public/img/logo-anim.svg


//- alternative Buzzrs to watch
.center(ng-show="status.creating")
  p.margin-top-big
    br
    br
    span.italic Check out these Buzzrs in the meantime:
  p.margin-top-big
    a.button-white.button-width.margin-mini(href="/damien%20hirst") damien hirst
    a.button-white.button-width.margin-mini(href="/snowboarding") snowboarding
  p
    a.button-white.button-width.margin-mini(href="/javascript") javascript
    a.button-white.button-width.margin-mini(href="/london%20property") london property
  p
    a.button-white.button-width.margin-mini(href="/judith%20butler") judith butler
    a.button-white.button-width.margin-mini(href="/teen%20wolf") teen wolf


