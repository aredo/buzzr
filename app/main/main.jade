.search-box
  form.header-form.form(ng-submit="search()")
    input.header-search(ng-model="title")
    span.header-search-icon
      include ../../public/img/search.svg

.header-spacer

//- searching
.center(ng-show="status.searching")
  h2.margin-top-big
    | buzzing the interweb for 
    strong {{searchText}} 
    | ...

//- unknown error
.center(ng-show="status.error")
  h2.margin-top-big
    br
    | {{errorMessage}}
    br
    br
    a.underline(ng-click="toggleFeedback()") Contact us for help.

//- creating a new feed
.center(ng-show="status.creating")
  h2.margin-top
    | Your topic 
    strong {{searchText}} 
    | is a new one for Buzzr!
  p.margin-top
    | Your new Buzzr will be ready in 
    strong {{countDown}}

//- loading
.center(ng-show="showLoading()")
  h2.margin-top.center
    .loading
      //-include ../../public/img/logo-anim.svg

//- alternative Buzzrs to watch
.center(ng-show="status.creating")
  include ../common/otherBuzzrs

//- display results
include feed
