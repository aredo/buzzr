header.header(ng-controller="appHeaderCtrl", ng-class="{'open': open}")
  .header-content-center
    
    //- Logged out
    .header-loggedout-menu(ng-hide="identity.isAuthenticated()")
      h4 Welcome to buzzr.
      p.
        Sign up to save your personal feeds, 
        and stay up to date on the topics you care about.
      p.margin-top
        a.button-black(href="/join") Join&nbsp;&nbsp;
        | &nbsp;&nbsp;
        a.button-white(href="/login") Login
      a.button-twitter.margin-top-sm(href="/auth/twitter", target="_self")
        .svg
          include ../../public/img/twitter.svg
        | Sign in with Twitter

    //- Logged in
    .header-loggedin-menu(ng-show="identity.isAuthenticated()")
      .center.margin-top
        a.header-action-readlater(href="/account/readlater")
          span &hearts;
        a.header-action-add(href="/")
          span +

      ul.margin-top
        li.relative(ng-repeat="buzzr in buzzrs")
          a.button-white.header-button(href="/{{encode(buzzr)}}")
            | {{buzzr}}
          span.header-action-remove(ng-click="removeBuzzr(buzzr); $event.stopPropagation();") -


    .header-footer(ng-show="identity.isAuthenticated()")
      ul.list-horizontal
        li
          a(href="/account/settings") Settings
        li
          a(href="", ng-click="signout()") Sign Out
  
  .header-content-right(ng-mouseenter="slideOut()")
    .header-logo(ng-click="toggleOpen(); $event.stopPropagation();")
      include ../../public/img/logo.svg
